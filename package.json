{
  "name": "contenster",
  "version": "1.0.0",
  "description": "contenster project API",
  "author": "Demian Panassol Malaguti",
  "private": true,
  "license": "CC BY-NC-SA 4.0",
  "scripts": {
    "build:server": "nest build",
    "build:client": "yarn --cwd client build",
    "app:build": "bash ./scripts/build.sh",
    "migrations:run": "bash ./scripts/migrations.sh",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "prettier:write": "prettier --write \"src/**/*.ts\"",
    "start:dev": "cross-env NODE_ENV=development node dist/main.js",
    "start:stg": "cross-env NODE_ENV=staging node dist/main.js",
    "start:prod": "cross-env NODE_ENV=production node dist/main.js",
    "nest:start:dev": "cross-env NODE_ENV=development nest start --watch",
    "nest:start:stg": "cross-env NODE_ENV=staging nest start --watch",
    "nest:start:prod": "cross-env NODE_ENV=production nest start --watch",
    "dev": "yarn nest:start:dev"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.12",
    "@nestjs/core": "^11.0.12",
    "@nestjs/platform-express": "^11.0.12",
    "@nestjs/schedule": "^5.0.1",
    "@nestjs/serve-static": "^5.0.3",
    "@nestjs/swagger": "^11.1.0",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.8.0",
    "connect-pg-simple": "^10.0.0",
    "cross-env": "^7.0.3",
    "express-session": "^1.18.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.2",
    "mysql2": "^3.14.0",
    "nest-winston": "^1.10.2",
    "nestjs-i18n": "^10.5.1",
    "nodemailer": "^6.10.0",
    "pg": "^8.14.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "sharp": "^0.33.5",
    "typeorm": "^0.3.21",
    "typeorm-extension": "^3.7.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.23.0",
    "@nestjs/cli": "^11.0.5",
    "@nestjs/schematics": "^11.0.2",
    "@nestjs/testing": "^11.0.12",
    "@types/compression": "^1.7.5",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/express": "^5.0.1",
    "@types/express-session": "^1.18.1",
    "@types/express-sslify": "^1.2.5",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/lodash": "^4.17.16",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.14",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.11.11",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.5",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
